<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Alarmscheduler" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.Alarmscheduler" parent="Base.Theme.Alarmscheduler" />

    <style name="HeadingTextViewTheme" parent="Base.Theme.Alarmscheduler">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/app_name_heading_text_size</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ButtonTheme" parent="Base.Theme.Alarmscheduler">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="RecyclerViewItemTextViewTheme" parent="Base.Theme.Alarmscheduler">
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RecyclerViewItemTextViewTheme.TimeTextView" parent="Base.Theme.Alarmscheduler">
        <item name="android:textSize">@dimen/recyclerview_item_date_text_size</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="RecyclerViewItemTextViewTheme.DateTextView" parent="Base.Theme.Alarmscheduler">
        <item name="android:textSize">@dimen/recyclerview_item_date_text_size</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>
</resources>